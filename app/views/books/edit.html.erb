<div class="row">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
  <%= render "tmp/error", errors: @book.errors, operation: "updating Book" %>
  <%= form_with model: @book, url: book_path, method: :patch do |f| %>
    <div class="form-group">
      <h4 class="<%= @book.get_form_title_class(:title) %>">Title</h4>
      <%= f.text_field :title, placeholder: @book.get_placeholder(:title),
        class: @book.get_form_class(:title) %>
    </div>
    <div class="form-group">
      <h4 class="<%= @book.get_form_title_class(:body) %>">Opinion</h4>
      <%= f.text_area :body, placeholder: @book.get_placeholder(:body),
        class: @book.get_form_class(:body) %>
    </div>
    <div class="row">
      <%= f.submit "Update book", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "Back", book_path(@book) %>
  </div>
</div>