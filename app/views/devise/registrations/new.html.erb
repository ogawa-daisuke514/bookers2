<div class="row">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
    <h2>Sign up</h2>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "tmp/error", errors: @user.errors, operation: "registering" %>

      <div class="field">
        <%= f.label :name, class: @user.get_form_title_class(:name) %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: @user.get_form_class(:name) %>
      </div>

      <div class="field">
        <%= f.label :email, class: @user.get_form_title_class(:email) %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: @user.get_form_class(:email) %>
      </div>

      <div class="field">
        <%= f.label :password, class: @user.get_form_title_class(:password) %>
        <%= f.password_field :password, autocomplete: "new-password", class: @user.get_form_class(:password) %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: @user.get_form_title_class(:password_confirmation) %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: @user.get_form_class(:password_confirmation) %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-small btn-success"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
