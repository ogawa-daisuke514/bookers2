<div class="row">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
  <%= render "error", errors: @user.errors, operation: "updating profile" %>
  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
    <div class="form-group">
      <h4 class="<%= @user.get_form_title_class(:name) %>">Name</h4>
      <%= f.text_field :name, placeholder: @user.get_placeholder(:name),
        class: @user.get_form_class(:name) %>
    </div>
    <div class="form-group">
      <h4 class="<%= @user.get_form_title_class(:introduction) %>">Introduction</h4>
      <%= f.text_area :introduction, placeholder: @user.get_placeholder(:introduction),
        class: @user.get_form_class(:introduction) %>
    </div>
    <div class="form-group">
      <h4 class="<%= @user.get_form_title_class(:profile_image) %>">Profile image</h4>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <%= f.file_field :profile_image, accept: "image/*", class: @user.get_form_class(:profile_image) %>
    </div>
    <div class="row">
      <%= f.submit "Update profile", class: "btn btn-primary" %>
      <%= link_to "Delete Account", user_path(@user),
         method: :delete, "data-confirm" =>
         "WARNING:\n\n" +
         "You are about to delete your account and all of your books.\n" +
         "Once they are deleted, none of them can be restored.\n\n" +
         "Do you really want to Delete?", class: "btn btn-danger ml-auto" %>
    </div>
  <% end %>
  <%= link_to "Back", request.referer %>
  </div>
</div>
